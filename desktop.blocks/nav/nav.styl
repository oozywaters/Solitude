.nav
  list-style none
  font-weight bold
  &__item
    display inline-block
    padding 2px 3px 0px 10px
    height 19px
    background url(menu_active.png) no-repeat 0px -38px
    // background-color red
    &:first-child
      background none
    // &:hover
    //   background-position: 0px -19px
    // &_state_active
    //   padding-left 7px
  &__link
    color #45ADA9
    // font 12pt Arial
    padding 2px 8px 1px 2px
