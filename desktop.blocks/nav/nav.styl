.nav__item_active:first-child, nav__item:first-child:hover
  padding-left 9px
  // padding-right 9px
  background url(menu_active.png) no-repeat -1px -19px !important

.nav_top 
  .nav__item_active, .nav__item:hover
    padding-top 0px
    // padding-right 4px
    background-position: 0px -19px
    // margin-rigth 9px
    .nav__link
      color #943415
      display block
      height 16px
      background url(menu_active.png) no-repeat right 0px
