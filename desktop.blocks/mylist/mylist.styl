$active_link
  color #943415
  font-weight bold

.mylist
  &__header
    padding-bottom 8px
  &__item
    overflow auto
    list-style none
    padding 4px 0px
    background url(list-sep.gif) repeat-x top left
    &:first-child
      background none
    &_active
      .mylist__link
        @extends $active_link
  &__link
    color #BB9D59
    text-decoration none
    padding-left 10px
    background url(arrow.gif) no-repeat 0px 5px
    &:hover
      @extends $active_link

.mylist_services
  .mylist__header
    font 18px Georgia
    padding-bottom 3px
    color #5C4527
  .mylist__item
    background url(mylist_services-sep.gif) repeat-x top left
    &:first-child
      background none
  .mylist__link
    background url(zoom.png) no-repeat 0px 3px
    color #943415
    font-weight bold
    font-size 11px
    padding 0px 0px 0px 18px
    &:hover
      text-decoration underline